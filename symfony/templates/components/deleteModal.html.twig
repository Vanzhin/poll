{#    Modal #}
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteModalLabel">Удаление</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <h4 class="modal-body">
            </h4>
            <div class="modal-footer d-flex">
                <a class="btn btn-outline-danger flex-fill"><i class="bi bi-trash3"></i></a>
            </div>
        </div>
    </div>
</div>
{% block javascript %}
<script>
    const deleteModal = document.getElementById('deleteModal')
    deleteModal.addEventListener('show.bs.modal', event => {
    // Button that triggered the modal
    const button = event.relatedTarget
    // Extract info from data-bs-* attributes
    const title = button.getAttribute('data-bs-title')
    const entity = button.getAttribute('data-bs-entity')

    const slug = button.getAttribute('data-bs-slug')

    // If necessary, you could initiate an AJAX request here
    // and then do the updating in a callback.
    //
    // Update the modal's content.
    const modalTitle = deleteModal.querySelector('.modal-body')
    const modalDeleteLink = deleteModal.querySelector('.modal-footer a')

    modalTitle.textContent = `Вы точно хотите удалить ${title}?`
    modalDeleteLink.setAttribute("href", `/admin/${entity}/${slug}/delete`)
})
</script>
{% endblock %}