{% extends 'admin/base.html.twig' %}

{% block title %}{{ parent() }} Вопросы{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Вопросы</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <a href="{{ path('app_admin_question_create') }}" type="button" class="btn btn-sm btn-outline-success"><i
                            class="bi bi-plus-lg"></i></a>
            </div>
        </div>
    </div>
    <div class="list-group">
        {% for question in pagination %}
            <div class="list-group-item list-group-item-action d-flex align-items-center justify-content-between gap-1"
                 aria-current="true">
                <div class="flex-fill">
                    <div class="d-flex w-100 justify-content-start align-items-center gap-4">
                        <h5 class="mb-1 d-flex justify-content-between align-items-center gap-4">
                            {{ question.title|slice(0,45 ) ~ '...' }}
                            <span class="badge bg-primary rounded-pill">{{ question.type.title }}</span>

                        </h5>

                        <small>{{ question.updatedAt|timeAgo }}</small>
                    </div>
                    <p class="mb-1">Краткое описание вопроса</p>
                    <small>Еще что-то</small>
                </div>
                {{ include('components/deleteUpdateButton.html.twig',{
                    'path': 'app_admin_question_edit',
                    'entity': question,
                    'name': 'question',
                    'transcription': 'Вопрос'

                }) }}
            </div>
        {% endfor %}
    </div>
    <div class="navigation my-2">
        {{ knp_pagination_render(pagination) }}
    </div>
    {{ include('components/deleteModal.html.twig') }}

{% endblock %}
